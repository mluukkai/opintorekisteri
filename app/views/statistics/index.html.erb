<h2>Statistics</h2>

<table class="table table-striped">
  <tr>
    <th></th>
    <% @keys.each do |key| %>
        <th><%= key %></th>
    <% end %>
  </tr>

<% @statistics.each do |statistic| %>
  <tr align="center">
    <td><%= link_to statistic, statistic %></td>
    <% @keys.each do |key| %>
        <td><%= statistic.aggregate[key]  %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_statistic_path,
            :class => 'btn btn-primary' %>